
<%= form_for @link, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :url_type, [['Статья', 1], ['Видео', 2], ['Книга', 3], ['Курс', 4], ['Магазин', 5]], :class => 'select_tag' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :road_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :road_id, Road.all, :id, :title, :include_blank => true, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :unit_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                links_path, :class => 'btn' %>
  </div>
<% end %>
